<div class='app-header'>
  <h3 class='h3 zero-margin'>To-Do Rails App</h3>
</div>

<div class='dashboard'>
  <nav class='dashboard-navigation'>
    <ul class='list'>
        <li class='list-item'><%= link_to 'Add new', new_note_path, class: 'navigation-link' %></li>
        <li class='list-item'><%= link_to 'Add 10 notes', new_note_path, class: 'navigation-link' %></li>
    </ul>
  </nav>

  <div class='new-note'>
    <h1>New note</h1>

    <%= form_with scope: :note, url: notes_path, local: true do |form| %>
      <div class='note-form'>
        <div class='title'>
          <%= form.text_area :title, placeholder: "Title", class: 'title' %>
        </div>

        <div class='body'>       
          <%= form.text_area :body, placeholder: "Description", class: 'body' %>
        </div>

        <div>
          <%= form.submit class: 'navigation-link submit' %>
        </div>
      </div>
    <% end %>
    <nav class='navigation'>
      <%= link_to 'Back', notes_path, class: 'navigation-link' %>
    </nav>

    </div>
  </div>
